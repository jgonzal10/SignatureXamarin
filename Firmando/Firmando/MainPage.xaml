<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:Firmando" xmlns:forms="clr-namespace:SignaturePad.Forms;assembly=SignaturePad.Forms" x:Class="Firmando.MainPage">
    <StackLayout>
        <Label Text="Xamarin Forms" FontSize="48" TextColor="DodgerBlue"/>
        <Label Text="Signature Pad" FontSize="52" TextColor="DeepPink"/>
        <forms:SignaturePadView x:Name="PadView" StrokeColor="Black" BackgroundColor="White" StrokeWidth="3" WidthRequest="280" HeightRequest="360" />
        <Button Text="Save" FontSize="30" BackgroundColor="Navy" TextColor="Silver" Clicked="SaveButton_Clicked"/>
        <Button Text="Clear" FontSize="30" BackgroundColor="Yellow" TextColor="White" Clicked="ClearButton_Clicked"/>
    </StackLayout>
</ContentPage>